<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context="com.gpsirsa.info">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/green"
        android:fontFamily="serif"
        android:text="Info About"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button11"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button12"
        android:layout_alignStart="@+id/button12"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="29dp"
        android:stateListAnimator="@drawable/button_state_list_anim"
        android:background="@drawable/button_selector"
        android:elevation="0dp"
        android:fontFamily="serif"
        android:onClick="fees"
        android:text="College Fee"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button12"
        android:stateListAnimator="@drawable/button_state_list_anim"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:background="@drawable/button_selector"
        android:elevation="0dp"
        android:fontFamily="serif"
        android:onClick="placement"
        android:text="Placement"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button13"
        android:stateListAnimator="@drawable/button_state_list_anim"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/button_selector"
        android:elevation="0dp"
        android:fontFamily="serif"
        android:onClick="scholarship"
        android:text="Scholarship"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/button_selector"
        android:elevation="0dp"
        android:fontFamily="serif"
        android:onClick="admission"
        android:text="Admission"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:textStyle="bold"
        android:stateListAnimator="@drawable/button_state_list_anim"/>

</RelativeLayout>
